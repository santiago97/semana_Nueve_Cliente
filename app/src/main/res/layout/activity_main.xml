<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1144097187.semana_nueve.MainActivity">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:id="@+id/red"
        android:indeterminate="false"
        android:max="255"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/green"
        android:indeterminate="false"
        android:max="255"
        android:layout_below="@+id/red"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/blue"
        android:max="255"
        android:layout_below="@+id/green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:onClick="enviar"
        android:id="@+id/envio"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/x"
        android:hint="Posicion en X"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/y"
        android:hint="Posicion en Y"
        android:layout_below="@+id/x"
        android:layout_alignLeft="@+id/x"
        android:layout_alignStart="@+id/x"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tam"
        android:hint="TamaÃ±o"
        android:layout_below="@+id/y"
        android:layout_alignLeft="@+id/y"
        android:layout_alignStart="@+id/y"
        android:layout_marginTop="29dp"
        />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:id="@+id/color"
        android:layout_marginBottom="50dp"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
